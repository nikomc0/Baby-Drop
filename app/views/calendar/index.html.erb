<%= month_calendar events: @drop_offs do |date, drops| %>
  <%= date.day %>

  <% drops.each do |drop| %>
    <div>
      <%= drop.name %>
    </div>
  <% end %>
<% end %>


<p id="notice"><%= notice %></p>

<h1>Drop Offs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drop_offs.each do |drop_off| %>
      <tr>
        <td><%= drop_off.name %></td>
        <td><%= drop_off.start_time.asctime %></td>
        <td><%= drop_off.end_time.strftime('%m-%d-%Y at %H:%M') %></td>
        <td><%= link_to 'View', drop_off %></td>
        <td><%= link_to 'Edit', edit_drop_off_path(drop_off) %></td>
        <td><%= link_to 'Delete', drop_off, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drop off', new_drop_off_path %>
