<h2>Family Info</h2>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control', placeholder: "First Name", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :child %>
    <%= f.text_field :child, class: 'form-control', placeholder: "Childs Name", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :spouse %>
    <%= f.text_field :spouse, class: 'form-control', placeholder: "Spouse's Name", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: 'form-control', placeholder: "Phone Number", required: true %>
  </div>


<h2>Facility Info</h2>
  <div class="form-group">
    <%= f.label :facility %>
    <%= f.text_field :facility, class: 'form-control', placeholder: "Facility Name", required: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
